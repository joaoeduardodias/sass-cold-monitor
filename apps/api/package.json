{
  "name": "@cold-monitor/api",
  "version": "1.0.0",
  "description": "API for Cold Monitor",
  "private": true,
  "scripts": {
    "dev": "pnpm env:load tsx watch src/http/server.ts",
    "build": "tsup",
    "start": "node dist/src/server.js",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio",
    "db:generate": "pnpm env:load prisma generate",
    "db:pull": "pnpm env:load prisma db pull",
    "db:reset": "pnpm env:load prisma migrate reset",
    "db:seed": "pnpm env:load prisma db seed",
    "env:load": "dotenv -e ../../.env --"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@cold-monitor/auth": "workspace:*",
    "@cold-monitor/env": "workspace:*",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "6.11.1",
    "@prisma/internals": "^7.0.0",
    "bcryptjs": "^3.0.2",
    "dayjs": "^1.11.19",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.1",
    "googleapis": "^152.0.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@cold-monitor/eslint-config": "workspace:*",
    "@cold-monitor/prettier": "workspace:*",
    "@cold-monitor/ts-config": "workspace:*",
    "@faker-js/faker": "^9.9.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.0.7",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^8.0.0",
    "prisma": "6.11.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.3"
  },
  "prettier": "@cold-monitor/prettier",
  "eslintConfig": {
    "extends": [
      "@cold-monitor/eslint-config/node"
    ]
  }
}